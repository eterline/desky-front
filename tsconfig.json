{
    "compilerOptions": {
      "outDir": "./build/",

      "noImplicitAny": true,

      "module": "ESNext",  // или "module": "ES6"
      "target": "ESNext", 
      "jsx": "react-jsx",

      "allowJs": true,
      "moduleResolution": "node",

      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
    },
    
    "ts-node": {
        "compilerOptions": {
          "module": "CommonJS"
        }
      }
}
